<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tutu.myapplication.MainActivity">

    <TextView
        android:id="@+id/display1"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textSize="25pt"
        android:textAlignment="viewEnd"
        android:gravity="end"
        android:background="@color/colorGreen">
    </TextView>
    <LinearLayout
        android:id="@+id/line0"
        android:layout_below="@id/display1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:onClick="buttonClearClick"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClear"
            android:text="C" />
    </LinearLayout>
    <LinearLayout

        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line0">

        <Button
            android:onClick="buttonNumberClick"
            android:id="@+id/button7"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="7" />

        <Button
            android:onClick="buttonNumberClick"
            android:id="@+id/button8"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="8" />

        <Button
            android:onClick="buttonNumberClick"
            android:id="@+id/button9"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="9" />

        <Button
            android:onClick="buttonDivideClick"
            android:id="@+id/buttonDivide"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1">

        <Button
            android:onClick="buttonNumberClick"
            android:id="@+id/button4"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="4" />

        <Button
            android:onClick="buttonNumberClick"
            android:id="@+id/button5"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="5" />

        <Button
            android:onClick="buttonNumberClick"
            android:id="@+id/button6"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="6" />

        <Button
            android:onClick="buttonMultiplyClick"
            android:id="@+id/buttonMultiply"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="*" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line2"
        android:id="@+id/line3" >

        <Button
            android:onClick="buttonNumberClick"
            android:id="@+id/button1"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="1" />

        <Button
            android:onClick="buttonNumberClick"
            android:id="@+id/button2"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="2" />

        <Button
            android:onClick="buttonNumberClick"
            android:id="@+id/button3"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="3" />
        <Button
            android:onClick="buttonSubtrcatClick"
            android:id="@+id/buttonSubtrcat"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="-"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line3" >

        <Button
            android:onClick="buttonNumberClick"
            android:id="@+id/button0"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="0"/>
       <Button
           android:onClick="buttonNumberClick"
           android:layout_width="@dimen/button_width"
           android:layout_height="wrap_content"
           android:id="@+id/buttonDot"
           android:text="."/>
        <Button
            android:onClick="buttonEqualClick"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:id="@+id/buttonEqual"
            android:text="=" />
        <Button
            android:onClick="buttonAddClick"
            android:id="@+id/buttonAdd"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:text="+"/>

    </LinearLayout>

</RelativeLayout>
